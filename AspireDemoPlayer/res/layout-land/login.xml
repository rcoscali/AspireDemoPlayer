<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:background="@drawable/nagravision"
        android:columnCount="4"
        >
        
    <TextView
            android:text="@string/login_title"
            android:textSize="32sp"

            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            />

    <TextView android:id="@+id/loginDirectiveLabel"
            android:text="@string/login_directive"
            android:textSize="16sp"

            android:layout_columnSpan="4"
            android:layout_gravity="left"
            />

    <TextView android:id="@+id/userNameLabel"
            android:text="@string/user_name_label"

            android:layout_gravity="right"
            />

    <EditText android:id="@+id/userName"
            android:ems="10"
            android:hint="@string/user_name_label"
            android:inputType="text"
            android:textColor="#00FFFF"
            />

    <TextView android:id="@+id/passwordLabel"
            android:text="@string/password_label"
            android:layout_column="0"
            android:layout_gravity="right"
            />

    <EditText android:id="@+id/password"
            android:ems="8"
            android:hint="@string/password_label"
            android:inputType="textPassword"
            android:textColor="#00FFFF"
            />

    <Space
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            />

    <Button android:id="@+id/login_button"
            android:text="@string/login_button_label"
  
            android:layout_row="5"
            android:layout_column="3"
            />
</GridLayout>
